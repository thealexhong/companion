<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AngryFace"
    android:background="#ff000000"

    android:id="@+id/angry">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:id="@+id/im_angry"
        android:src="@drawable/deedeeangry3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#ffed1c24"
        />
    <ImageView
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:id="@+id/im_happy"
        android:src="@drawable/deedeehappy3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#ff22b14c"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:id="@+id/im_surprised"
        android:src="@drawable/deedeesurprised2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#ffffc90e"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="350dp"
        android:id="@+id/btn_happy"
        android:visibility="visible"
        android:onClick="btn_happy"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="350dp"
        android:id="@+id/btn_surprise"
        android:visibility="visible"
        android:onClick="btn_surprise"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="350dp"
        android:id="@+id/btn_angry"
        android:visibility="visible"
        android:onClick="btn_angry"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/bluetooth"
        android:visibility="visible"
        android:onClick="bluetooth"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>
