<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ece1778.companion_ui.Autonomous"
    android:background="#ff1d1d21"
    android:id="@+id/text">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Autonomous"
        android:id="@+id/textView2"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:id="@+id/Alarm"
        android:background="#ffff452d"
        android:layout_marginTop="330dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="alarm" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:id="@+id/Auto"
        android:background="#ff5ddc4e"
        android:layout_alignTop="@+id/Alarm"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="Manual"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="GPS"
        android:id="@+id/button3"
        android:onClick="GPS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="Stop Motors"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Audio Command"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/setting"
        android:background="#ff1d1d21"
        android:onClick="AlarmSetting"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:background="#ff1d1d21"
        android:onClick="Connection"
        android:nestedScrollingEnabled="false"
        android:src="@drawable/status3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log:"
        android:id="@+id/textView22"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/imageButton2"

        android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=
"Autonomous Following Active...
Autonomous Security Active..."

        android:id="@+id/textView23"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

</RelativeLayout>
