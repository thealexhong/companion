<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ece1778.companion_ui.Operating"
    android:background="#ff1d1d21"
    android:id="@+id/text">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:background="#ffd1ccd1"
        android:layout_marginTop="60dp"
        android:alpha="0.5">

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Controller"
        android:id="@+id/textView2"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:text="Alarm"
    android:id="@+id/btn_alarm"
    android:background="#ffff452d"
    android:layout_marginTop="32dp"
    android:layout_below="@+id/btn_bwd"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:onClick="alarm" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Autonomous"
        android:id="@+id/Auto"
        android:background="#ff5ddc4e"
        android:layout_alignTop="@+id/btn_alarm"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:onClick="autonomous" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_fwd"
        android:src="@drawable/up"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/btn_alarm"
        android:layout_alignEnd="@+id/btn_alarm" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_left"
        android:src="@drawable/left"
        android:layout_below="@+id/btn_fwd"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_bwd"
        android:layout_below="@+id/btn_left"
        android:layout_alignRight="@+id/btn_alarm"
        android:layout_alignEnd="@+id/btn_alarm"
        android:src="@drawable/down" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btn_right"
        android:src="@drawable/right"
        android:layout_below="@+id/btn_fwd"
        android:layout_toRightOf="@+id/btn_fwd" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="GPS"
        android:id="@+id/button3"
        android:onClick="GPS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:text="Stop Motors"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Audio Command"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Rotate Left"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/btn_fwd"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Rotate Left"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/btn_bwd"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:src="@drawable/setting"
        android:background="#ff1d1d21"
        android:onClick="AlarmSetting"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton2"
        android:background="#ff1d1d21"
        android:onClick="Connection"
        android:nestedScrollingEnabled="false"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:src="@drawable/status3" />

</RelativeLayout>
