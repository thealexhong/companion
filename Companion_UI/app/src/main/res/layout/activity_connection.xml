<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ece1778.companion_ui.Connection"
    android:background="#ff1d1d21">

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/textView"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Robot Connection"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:background="#ffff7b6f"
        android:textColor="#fffcfcfc"
        />
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Robot Phone Connection"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="170dp"
        android:background="#ffff7b6f"
        android:textColor="#fffcfcfc"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wheel 1"
        android:textSize="20dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="40dp"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView1"
        android:src="#ff38d114"
        android:layout_marginLeft="110dp"
        android:layout_alignTop="@+id/textView9"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Wheel 2"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="80dp"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="#ff38d114"
        android:layout_marginLeft="110dp"
        android:layout_alignTop="@+id/textView10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weapon"
        android:textSize="20dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="120dp"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="#ff38d114"
        android:layout_marginLeft="110dp"
        android:layout_alignTop="@+id/textView11"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="GPS"
        android:textSize="20dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/textView9"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="#ff38d114"
        android:layout_marginLeft="255dp"
        android:layout_alignTop="@+id/textView12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Accel"
        android:textSize="20dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignTop="@+id/textView10"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="#ff38d114"
        android:layout_marginLeft="255dp"
        android:layout_alignTop="@+id/textView13"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Display"
        android:textSize="20dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignTop="@+id/textView11"
        android:textColor="#fffcfcfc"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:src="#ffd1ca25"
        android:layout_marginLeft="255dp"
        android:layout_alignTop="@+id/textView14"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Audio"
        android:textSize="20dp"
        android:id="@+id/textView15"
        android:textColor="#fffcfcfc"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignLeft="@+id/textView8"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView7"
        android:src="#ffd11708"
        android:layout_marginLeft="255dp"
        android:layout_alignTop="@+id/textView15"
        />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:src="@drawable/home"
        android:background="#ff1d1d21"
        android:onClick="home"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
