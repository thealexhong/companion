<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ece1778.companion_ui.AlarmAction"
    android:background="#ff1d1d21">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activated Actions"
        android:id="@+id/textView"
        android:textColor="#fff8f8f8"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/Alarm"
        android:background="#ffff452d"
        android:onClick="cancel"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level 1"
        android:id="@+id/textView4"
        android:textColor="#fffafafa"
        android:textSize="25dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level 2"
        android:id="@+id/textView5"
        android:textColor="#fffafafa"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level 3"
        android:id="@+id/textView6"
        android:textColor="#fffafafa"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop1"
        android:background="#ffff452d"
        android:onClick="stop1"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_marginLeft="210dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop2"
        android:background="#ffff452d"
        android:onClick="stop2"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_marginLeft="210dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop3"
        android:background="#ffff452d"
        android:onClick="stop3"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_marginLeft="210dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView1"
        android:src="#ff38d114"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/textView4"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="#ff38d114"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/textView5"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="#ff38d114"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/textView6"
        />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home"
        android:src="@drawable/home"
        android:background="#ff1d1d21"
        android:onClick="home"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
